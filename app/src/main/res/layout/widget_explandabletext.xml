<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tv_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="@dimen/lineSpacSize"
            android:text="显示部分"
            android:textColor="@color/black"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/tv_show_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:visibility="gone"
            android:lineSpacingMultiplier="@dimen/lineSpacSize"
            android:text="展开显示全部"/>

        <LinearLayout
            android:id="@+id/ll_loadmore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_show"
            android:orientation="vertical"
            android:visibility="visible">
            <View
                android:id="@+id/v_gap"
                android:layout_width="match_parent"
                android:background="@drawable/shap_background"
                android:layout_height="12sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_horizontal"
                android:text="展开"
                android:textColor="@color/spdb_color_blue"
                android:background="@color/white"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="12sp"
                android:src="@drawable/arrow_expland"
                android:background="@color/white"/>
        </LinearLayout>
</RelativeLayout>