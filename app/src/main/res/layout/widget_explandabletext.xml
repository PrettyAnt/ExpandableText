<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tv_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingMultiplier="@dimen/lineSpacSize"
        android:text="失败"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/ll_loadmore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_show"
        android:orientation="vertical"
        android:visibility="visible">

        <View
            android:id="@+id/v_gap"
            android:layout_width="match_parent"
            android:layout_height="12sp"
            android:background="@drawable/shap_background_cangrdient"/>

        <TextView
            android:id="@+id/tv_explandshrink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_horizontal"
            android:text="展开"
            android:textColor="@color/spdb_color_blue" />

        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="match_parent"
            android:layout_height="12sp"
            android:background="@color/white"
            android:src="@drawable/arrow_expland" />
    </LinearLayout>
</RelativeLayout>